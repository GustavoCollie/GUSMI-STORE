# Database Configuration
POSTGRES_USER=inventory_user
POSTGRES_PASSWORD=inventory_pass
POSTGRES_DB=inventory_db
DATABASE_URL=postgresql://inventory_user:inventory_pass@db:5432/inventory_db

# Security (REQUIRED - Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
# DO NOT use default values in production!
SECRET_KEY=
API_KEY=

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Frontend URL (for email links and redirects)
FRONTEND_URL=http://localhost:5173

# Email Configuration (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_SENDER=noreply@gusmi-store.com

# Stripe (Optional - for e-commerce features)
STRIPE_API_KEY=

# Supabase Storage (Optional - for persistent image uploads)
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_STORAGE_BUCKET=products

# Application Environment
ENV=development
REPOSITORY_TYPE=postgres
